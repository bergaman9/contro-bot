# CONTRO Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Bot authentication tokens
ADMIN_USER_ID=your_discord_user_id_here
AUTHORIZATION=your_authorization_token_here

# Bot tokens - Choose the appropriate token for your deployment
CONTRO_MAIN_TOKEN=your_main_bot_token_here
CONTRO_DEV_TOKEN=your_dev_bot_token_here
CONTRO_PREMIUM_TOKEN=your_premium_bot_token_here

# Database settings
DB=contro-bot-db
MONGO_DB=your_mongodb_connection_string_here

# Alternative MongoDB Atlas connection string format:
# MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Optional: Additional database settings
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=contro-bot-db

# Optional: Logging configuration
LOG_LEVEL=INFO
# LOG_FILE=bot.log

# Optional: API Keys for additional features
PERPLEXITY_API_KEY=your_perplexity_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# External API Keys (Optional)
GUILDS_API_KEY=your_guilds_api_key_here
TMDB_API_KEY=your_tmdb_api_key_here

# Reddit API Credentials (Optional)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_PASSWORD=your_reddit_password_here
REDDIT_USER_AGENT=your_reddit_user_agent_here
REDDIT_USERNAME=your_reddit_username_here

# Spotify API Credentials (Optional)
SP_CLIENT_ID=your_spotify_client_id_here
SP_CLIENT_SECRET=your_spotify_client_secret_here

# Server and Channel IDs (Update with your server/channel IDs)
SESSION_ID=your_session_id_here
TEKNOMINATOR_CID=your_teknominator_channel_id_here
TEKNOMINATOR_GID=your_teknominator_guild_id_here
TURKOYTO_CID=your_turkoyto_channel_id_here
TURKOYTO_GID=your_turkoyto_guild_id_here

# User Token for Special Operations (Optional)
USER_TOKEN=your_user_token_here
USER_ID=your_user_id_here

# Bot Configuration
BOT_ENV=development
DEFAULT_PREFIX=>

# Deployment Configuration
MEMORY_LIMIT=1G
CPU_LIMIT=2.0

# Monitoring Configuration (for production)
GRAFANA_PASSWORD=admin
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

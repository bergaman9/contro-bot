# Contro Discord Bot - Environment Configuration
# Copy this file to .env and fill in your values

# Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_PREFIX=!
ENVIRONMENT=development
DEBUG=true
BOT_NAME=Contro Bot
BOT_VERSION=2.0.0

# Database Configuration
DB_URL=mongodb://localhost:27017
DB_DATABASE_NAME=contro_bot
DB_MAX_POOL_SIZE=20
DB_MIN_POOL_SIZE=5
DB_CONNECT_TIMEOUT=30000
DB_SERVER_SELECTION_TIMEOUT=5000

# Cache Configuration
CACHE_ENABLED=true
CACHE_REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=LRU

# API Configuration
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=8080
API_CORS_ORIGINS=*
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
API_SECRET_KEY=your-secret-key-change-this

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/bot.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json
LOG_COLORED=true

# Security Configuration
SECURITY_ENABLED=true
SECURITY_JWT_SECRET=your-jwt-secret-key
SECURITY_JWT_EXPIRY=3600
SECURITY_PASSWORD_SALT_ROUNDS=12

# Feature Flags
FEATURE_AI_CHAT=true
FEATURE_GAME_LOGS=true
FEATURE_LEVELING=true
FEATURE_MODERATION=true
FEATURE_WELCOME=true
FEATURE_TICKETS=true
FEATURE_GIVEAWAYS=true

# Performance Configuration
PERFORMANCE_MAX_CONCURRENT_TASKS=100
PERFORMANCE_TASK_TIMEOUT=30
PERFORMANCE_MEMORY_LIMIT=512

# External Services API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
STEAM_API_KEY=your_steam_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=your_reddit_user_agent_here 
# CONTRO Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Bot authentication tokens
ADMIN_USER_ID=your_admin_user_id_here
AUTHORIZATION=your_authorization_token_here

# Bot tokens - Choose the appropriate token for your deployment
CONTRO_MAIN_TOKEN=your_main_bot_token_here
CONTRO_DEV_TOKEN=your_dev_bot_token_here
CONTRO_PREMIUM_TOKEN=your_premium_bot_token_here

# Database settings
DB=contro-bot-db
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/contro-bot-db

# Alternative MongoDB Atlas connection string format:
# MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Optional: Additional database settings
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=contro-bot-db

# Optional: Logging configuration
# LOG_LEVEL=INFO
# LOG_FILE=bot.log

# Optional: API Keys for additional features
# PERPLEXITY_API_KEY=your_perplexity_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: Development settings
# DEBUG=false
# DEVELOPMENT_MODE=false
